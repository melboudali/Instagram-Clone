		"connect-redis": "^5.1.0",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-session": "^1.17.1",
		"graphql": "^15.4.0",
		"graphql-upload": "^11.0.0",
		"ioredis": "^4.22.0",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"type-graphql": "^1.1.1",
		"typeorm": "^0.2.31",
		"typescript": "^4.1.5",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/apollo-upload-client": "^14.1.0",
		"@types/connect-redis": "^0.0.16",
